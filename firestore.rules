rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public site configuration banner (readable by anyone; write restricted)
    match /config/banner {
      allow read: if true;
      // Writes allowed only for authenticated admins. We accept either:
      // - Custom claim 'admin' on the Firebase Auth token, OR
      // - Admin flag stored on the user's Firestore doc (new or legacy paths)
      allow write: if request.auth != null && (
        request.auth.token.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.flags.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
      );
    }

    // Admin-configurable roulette: public read for students; admin-only write
    match /config/roulette {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.flags.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
      );
    }

    // Public user profiles: allow read for everyone
    match /users/{uid} {
      allow read: if true;
      allow write: if false;
    }

    // Reviews/Feedback: allow authenticated users to CREATE only.
    // Admins may read/update/delete for moderation.
    match /reviews/{id} {
      // Anyone signed in can read reviews (admin UI also enforces access in-app)
      allow read: if request.auth != null;

      // Authenticated users can create their own review with constraints
      allow create: if request.auth != null &&
        request.resource.data.message is string &&
        request.resource.data.message.size() > 0 &&
        request.resource.data.message.size() <= 2000 &&
        (request.resource.data.category in ['general','bug','feature','ui']) &&
        (request.resource.data.rating == null ||
          (request.resource.data.rating is int && request.resource.data.rating >= 1 && request.resource.data.rating <= 5)) &&
        request.resource.data.uid == request.auth.uid;

      // Only admins can update or delete
      allow update, delete: if request.auth != null && (
        request.auth.token.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.flags.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
      );
    }

    // Default deny for everything else
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}