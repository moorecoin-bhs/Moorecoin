rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public site configuration banner (readable by anyone; write restricted)
    match /config/banner {
      allow read: if true;
      // Writes allowed only for authenticated admins. We check a custom claim
      // 'admin' set on the Firebase Auth user, or optionally an allowlist.
      allow write: if request.auth != null && (request.auth.token.admin == true);
    }

    // Default deny for everything else
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}